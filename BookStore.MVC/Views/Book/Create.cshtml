@model BookStore.MVC.Models.ViewModel.Book.FormBookViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Book", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(x => x.Title)
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Title, "", new { @class="text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Price)
            @Html.TextBoxFor(x=>x.Price, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryId)
            @Html.DropDownListFor(x => x.CategoryId, Model.CategorySelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


